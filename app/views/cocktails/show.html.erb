


<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
     <div class="contain-form">
      <div class="heading">
        <div><%= @cocktail.name %></div>
        <div>
          <%= link_to cocktails_path do  %>
          <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>


      <hr>
      <div class="card">
        <div class="card-header">
         <%= @cocktail.name  %>
       </div>
       <div class="card-body">
        <% @cocktail.ingredients.each do |ingredient| %>
        <p><%= ingredient.name %></p>
        <% end %>
      </div>

    </div>
  </div>
</div>
