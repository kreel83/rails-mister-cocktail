<div class="container">
  <h1>Listes des Cocktails</h1>
  <%= link_to 'create new', new_cocktail_path, class: "btn btn-primary", :data => { :'toggle' => 'modal', :'target' => '#exampleModal' } %>

  Launch demo modal
</button>
<div class="cocktails">
  <% @cocktails.each do |cocktail| %>
  <div class="card">
    <div class="card-footer">
      <div class="haut">
        <%= cocktail.name %>
        <div>
          <%= link_to '+',  new_cocktail_dose_path(cocktail), class: "btn btn-primary btn-sm" %>
          <%= link_to '-',  cocktail_path(cocktail), method: 'delete', class: "btn btn-danger btn-sm" %>
          <%= link_to cocktail_path(cocktail),class: "btn btn-success btn-sm" do%>
          <i class="fas fa-pen"></i>
          <% end %>
        </div>
      </div>
      <div class="bas">
        <% cocktail.ingredients.each do |ingredient| %>
        <span><%=  ingredient.name %> - </span>
        <% end %>
      </div>
    </div>
    <card class="card-body" >
      <%= image_tag "https://source.unsplash.com/featured/?cocktail/#{cocktail.name}", alt: "Le Wagon" %>
    </card>
  </div>
  <% end %>
</div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">create a new cocktail</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
         <%= simple_form_for(@cocktail) do |f| %>
         <%= f.input :name%>
         <%= f.submit class: "btn btn-primary"%>
         <% end %>
       </div>
     </div>
   </div>
 </div>
</div>




<script>
  $('#myModal').on('shown.bs.modal', function () {
    $('#myInput').trigger('focus')
  })
</script>
